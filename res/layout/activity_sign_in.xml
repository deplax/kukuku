<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#333F68"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="136dp"
        android:layout_above="@+id/emailEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/plannet_intro" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51.47dp"
        android:layout_height="12dp"
        android:layout_above="@+id/emailEdit"
        android:layout_alignLeft="@+id/emailEdit"
        android:layout_marginBottom="2dp"
        android:background="@drawable/plannet_emailtext" />

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/passwordEdit"
        android:layout_centerVertical="true"
        android:background="#161F3D"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#fff" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90.63dp"
        android:layout_height="12dp"
        android:layout_alignLeft="@+id/passwordEdit"
        android:layout_alignTop="@+id/passwordEdit"
        android:layout_marginTop="-14dp"
        android:background="@drawable/plannet_passwordtext" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@+id/emailEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="#161F3D"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="68dp"
        android:layout_height="12.2dp"
        android:layout_above="@+id/signUpPortalButton"
        android:layout_alignLeft="@+id/signUpPortalButton"
        android:layout_marginBottom="1dp"
        android:background="@drawable/plannet_signuptext" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="68dp"
        android:layout_height="12.2dp"
        android:layout_above="@+id/signInButton"
        android:layout_alignRight="@+id/signInButton"
        android:layout_marginBottom="-40dp"
        android:background="@drawable/plannet_signintext" />

    <Button
        android:id="@+id/signUpPortalButton"
        android:layout_width="70dp"
        android:layout_height="54.20dp"
        android:layout_alignBaseline="@+id/signInButton"
        android:layout_alignBottom="@+id/signInButton"
        android:layout_alignLeft="@+id/passwordEdit"
        android:layout_marginLeft="10dp"
        android:background="@drawable/plannet_signup" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="70dp"
        android:layout_height="54.20dp"
        android:layout_alignRight="@+id/passwordEdit"
        android:layout_below="@+id/passwordEdit"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/plannet_signin" />

</RelativeLayout>