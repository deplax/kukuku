<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#333F68"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="136dp"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/plannet_intro" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51.47dp"
        android:layout_height="12dp"
        android:layout_above="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_marginBottom="2dp"
        android:background="@drawable/plannet_emailtext" />

    <EditText
        android:id="@+id/email"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_above="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginBottom="20dp"
        android:background="#161F3D"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#fff" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="46.73dp"
        android:layout_height="12dp"
        android:layout_alignLeft="@+id/name"
        android:layout_alignTop="@+id/name"
        android:layout_marginTop="-14dp"
        android:background="@drawable/plannet_nametext" />

    <EditText
        android:id="@+id/name"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#161F3D"
        android:ems="10"
        android:inputType="text"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90.63dp"
        android:layout_height="12dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignTop="@+id/password"
        android:layout_marginTop="-14dp"
        android:background="@drawable/plannet_passwordtext" />

    <EditText
        android:id="@+id/password"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#161F3D"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="155dp"
        android:layout_height="12dp"
        android:layout_alignLeft="@+id/passwordCheck"
        android:layout_alignTop="@+id/passwordCheck"
        android:layout_marginTop="-14dp"
        android:background="@drawable/plannet_passwordchecktext" />

    <EditText
        android:id="@+id/passwordCheck"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#161F3D"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="70dp"
        android:layout_height="54.20dp"
        android:layout_below="@+id/passwordCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/plannet_check" />

</RelativeLayout>